---

const { title } = Astro.props;
---

<article class="comrades-sheet paper-a4 border-2 mx-auto flex flex-col">
  <header class="w-full pt-8">
    <div class="w-full text-right pr-16">
      <span class="text-8xl font-bold text-red-700">동지</span>
    </div>
    <div class="w-full text-white bg-red-700 p-1 pl-24">
      <h2 class="text-4xl font-bold mb-0">{title}</h2>
    </div>
  </header>
  <div class="columns-4 gap-2 p-16 pt-1 pb-14">
    <slot />
  </div>
</article>

<style is:global>
  .comrades-sheet h3,
  .comrades-sheet h4,
  .comrades-sheet strong {
    @apply text-red-700 mb-0 mt-4 font-bold;
  }

  .comrades-sheet .break-column {
    break-before: column;
  }

  .comrades-sheet em {
    color: inherit;
  }
  .comrades-sheet p {
    line-height: 1.2rem;
    word-break: keep-all;

  }
  .comrades-sheet h3:first-child {
    margin-top: 0;
  }
  .comrades-sheet ul {
    list-style: disc;
    padding-left: 1rem;
  }
  .comrades-sheet ul li::marker {
    @apply text-red-700;
  }
  .comrades-sheet li {
    line-height: 1.2rem;
  }
</style>