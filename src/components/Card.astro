<style>
  .flip-card:hover .flip-card-inner {
    transform: rotateY(180deg);
  }

  .flip-card-inner {
    transition: transform 0.8s;
    transform-style: preserve-3d;
  }
  
  .back, .front {
    position: absolute;
    width: 100%;
    height: 100%;
    -webkit-backface-visibility: hidden; /* Safari */
    backface-visibility: hidden;
  }

  .front {
    transform: rotateY(180deg);
  }


  .flip-card img {
    transition: opacity 0.8s;
  }

  .flip-card:hover img {
    opacity: 0;
  }

  .flip-card:nth-child(even) .numenera-card-background {
    background-image: url("http://numenera.com/wp-content/uploads/2017/08/Into-the-Night-1-Lee-Smith.jpg");
  }

  .flip-card:nth-child(odd) .numenera-card-background {
    background-image: url("http://numenera.com/wp-content/uploads/2017/08/Slideshow-FoundationStones.jpg");
  }
</style>