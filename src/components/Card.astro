<div class="flip-card">
  <div class="flip-card-inner rounded-lg w-80 h-36 border-2 shadow-xl text-center  border-yellow-400">
    <div class="front flex flex-col justify-center">
      <p class="m-auto text-3xl font-bold">
        <slot />
      </p>
    </div>
    <div class="back numenera-card-background bg-cover rounded-lg flex flex-col justify-center">
